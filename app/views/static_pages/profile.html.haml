.span4=image_tag current_user.gravatar_url, class: 'center-block'
.span5
  .panel.panel-success.well
    .panel-heading
      %h4="#{current_user.first_name} #{current_user.last_name}"
      %hr
    .panel-body
      %h5= current_user.email
      %h5=link_to current_user.blog, current_user.blog_url
      %h5
        = link_to "Github Repo", "http://github.com/#{current_user.gh_name}"

%table.table.table-striped
  %thead
    %tr
      %th= "#{current_user.first_name}'s Assignments"
      -@assignments.sort_by{|a| a.date}.each do |assignment|
        %th
          =assignment.date.strftime("%m/%d")
  %tbody
    %tr
      %td
        = "#{current_user.first_name} #{current_user.last_name}"
      - @assignments.each do |assignment|
        %td
          - if current_user.homework_for(assignment) != nil
            - if current_user.homework_for(assignment).finished?
              %span.label.label-success
                = link_to "Ok", current_user.homework_for(assignment).url
            -else
              %span.label.label-warning
                = link_to "No", current_user.homework_for(assignment).url
