-unless current_user.try(:blog)
  %h3
    = link_to "Add Your Blog!", edit_user_registration_path, class: "update"
.outer
  -@users.sort_by{ |user| user[:first_name] }.each do |user|
    -if user.blog
      .inner.ass= link_to image_tag(user.gravatar_url, size: '200', class: 'avatar'), user.blog_url, title: "#{user.name}: #{user.blog}"
