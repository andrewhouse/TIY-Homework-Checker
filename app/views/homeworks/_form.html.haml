= simple_form_for @homework, :html => { :class => 'form-horizontal' } do |f|
  = f.input :link_to_homework, placeholder: "URL to Homework Assignment", required: true, label: "Homework Link (Please Use http://)"
  = f.input :finished, as: :boolean, checked_value: true, unchecked_value: false, label: "Are you Finished? (Check for Yes)"
  = f.association :assignment, collection: @assignments, required: true
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), homeworks_path, :class => 'btn'
