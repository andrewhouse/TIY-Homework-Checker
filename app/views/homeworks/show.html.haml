- model_class = Homework
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:link_to_homework) + ':'
  %br
  = @homework.link_to_homework
%p
  %strong= model_class.human_attribute_name(:finished?) + ':'
  %br
  = @homework.finished?

.form-actions
  = link_to t('.back', :default => t("Homework Page")), homeworks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_homework_path(@homework), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), homework_path(@homework), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
