.navbar.navbar-fluid-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand(href=root_path) The Iron Yard - Homework
      .container.nav-collapse.pull-right
        %ul#nav.nav.nav-tabs
          %li= link_to "Home", root_path
          %li= link_to "Blogs", blogs_path
          %li= link_to 'Repos', repos_path
          %li= link_to "About", about_path
          %li= link_to "Contact", contact_path
          -if current_user.try(:admin?)
            %li.dropdown
              %a.dropdown-toggle{data: {:toggle => 'dropdown'} }
                Assignments
                %span.caret
                %ul.dropdown-menu.pull-right
                  %li= link_to "Post New Assignment", new_assignment_path
                  %li= link_to "View All Assignments", assignments_path
          %li.dropdown
            %a.dropdown-toggle{data: {:toggle => 'dropdown'} }
              Homework
              %span.caret
              %ul.dropdown-menu.pull-right
                -if signed_in?
                  %li= link_to "Update Homework Progress", new_homework_path
                %li= link_to "View All Homework", homeworks_path
                %li= link_to "My Assignments", mine_path
                %li= link_to "Completed Assignments", complete_path
                %li= link_to "Incomplete Assignments", incomplete_path
            %li.dropdown
              %a.dropdown-toggle{data: {:toggle => 'dropdown'} }
                User Info
                %span.caret
                %ul.dropdown-menu.pull-right
                  = render 'devise/menu/registration_items'
                  = render 'devise/menu/login_items'
