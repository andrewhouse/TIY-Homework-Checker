= simple_form_for @assignment, :html => { :class => 'form-horizontal' } do |f|
  = f.input :date, :as => :string, :input_html => { :class => 'jquery-ui-date', :value => @assignment.try(:date).try(:strftime,'%m/%d/%Y')}
  = f.input :date, :as => :hidden, :input_html => { :id => 'recorded-at-alt'}
  = f.input :title
  = f.text_area :description, rows: 10
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), homeworks_path, :class => 'btn btn-danger'
